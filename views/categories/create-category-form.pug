extends ../layouts/layout-admin.pug 

block content
    main
        article
            .content-wrapper-border
                .content-wrapper(style="display: flex; justify-content: center; align-items: center;")
                    form.form(action="/admin_panel_category/create_action" method="POST" enctype="multipart/form-data")    
                        h2 Add category
                        div#register
                            label(for="category_cover") Insert cover 
                            input(type="file", name="category_cover", id="category_cover" hidden)
                            input(type="text", name="category_name", placeholder="Category's name")
                            input(type="text", name="category_description", placeholder="Category's description")
                        div#create-btn-container
                            button.create-btn(type="submit") Create
                            a(href="/admin-panel")
                                button(type="button") Cancel
    br
    br
    br
    br
    br
    br
    br
block scripts
    script.
        var newTitle = 'Add game';
        document.title = newTitle;